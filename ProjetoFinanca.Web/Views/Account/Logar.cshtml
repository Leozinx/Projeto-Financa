@model ProjetoFinanca.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Logar";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="">
    <link rel="stylesheet" href="~/Content/plugins.css">
    <link rel="stylesheet" href="~/Content/style.css">
    <link href="~/Content/login.min.css" rel="stylesheet" />
</head>

<body>
<div class="login-form">
    <div class="conteiner">
        @using (Ajax.BeginForm("Logar", "Account", FormMethod.Post, new AjaxOptions
        {
            HttpMethod = "POST",
            OnSuccess = "OnsuccessLogar",
            OnBegin = "OnBeginLogar",
            OnComplete = "OnCompleteLogar",
            OnFailure = "OnFaiulureLogar"
        }))
        {
            @Html.AntiForgeryToken()
            <div class="formulario">
                <h1>Acesso ao sistema</h1>
                @Html.EditorFor(model => model.Username, new {htmlAttributes = new {@class = "form-control", placeholder = "Nome de Usuário", autofocus = true}})
                @*<input type="text" name="" class="form-control" placeholder="Nome de Usuário">*@
                @Html.PasswordFor(m => m.Password, new {@class = "form-control", @placeholder = "Senha"})
                @*<input type="password" class="form-control" placeholder="Senha">*@
                <div class="alerta">
                    
                </div>
                <button class="acessar" type="submit">Acessar</button>
            </div>
        }
    </div>
</div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript" src="~/Scripts/sistema.js"></script>
</body>

</html>